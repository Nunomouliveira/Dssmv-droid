<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#6E260E"
        android:layout_height="match_parent"
        tools:context=".LibraryActivity">


    <ListView
            android:id="@+id/librariesListView"
            android:layout_width="408dp"
            android:layout_height="619dp"
            tools:layout_editor_absoluteX="1dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="72dp"/>
    <TextView
            android:text="Libraries"
            android:layout_width="102dp"
            android:layout_height="32dp" android:id="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="76dp" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Add Library"
            android:layout_width="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" android:id="@+id/createLibraryButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>
    <Button
            android:text="Refresh"
            android:layout_width="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" android:id="@+id/refreshButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>