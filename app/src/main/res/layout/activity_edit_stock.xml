            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="Insert new bookÂ´s stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/insertStockTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="116dp"
            app:layout_constraintHorizontal_bias="0.111"
    />
    <Button
            android:text="Update Stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/updateStockButton"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="380dp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"/>
</androidx.constraintlayout.widget.ConstraintLayout>