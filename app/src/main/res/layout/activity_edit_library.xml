<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#6E260E"
        android:layout_height="match_parent"
        tools:context=".CreateLibraryActivity">
    <TextView
            android:text="Insert library´s open time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openTimeUpdateTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toTopOf="@+id/openTimeUpdateInsertView"/>
    <TextView
            android:text="Insert library´s open days:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openDaysUpdateTextView"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/openUpdateTextView"
            android:layout_marginTop="68dp" app:layout_constraintBottom_toTopOf="@+id/openDaysUpdateInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/nameUpdateInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintBottom_toTopOf="@+id/addressUpdateInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/addressUpdateInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="176dp" app:layout_constraintBottom_toTopOf="@+id/openUpdateInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/openUpdateInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp" app:layout_constraintBottom_toTopOf="@+id/openDaysUpdateInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Insert library´s close time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/closeTimeUpdateTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toTopOf="@+id/closeTimeUpdateInsertView"/>
    <EditText
            android:id="@+id/openDaysUpdateInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="352dp" app:layout_constraintBottom_toTopOf="@+id/openStatementUpdateInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/openStatementUpdateInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="436dp" app:layout_constraintBottom_toTopOf="@+id/openTimeUpdateInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/openTimeUpdateInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="520dp" app:layout_constraintBottom_toTopOf="@+id/closeTimeUpdateInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Insert library´s open statement:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openStatementUpdateTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/openStatementUpdateInsertView" android:layout_marginBottom="8dp"/>
    <EditText
            android:id="@+id/closeTimeUpdateInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="604dp"/>
    <TextView
            android:text="Insert library´s open:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openUpdateTextView"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintBottom_toTopOf="@+id/openUpdateInsertView"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Insert library´s name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameUpdateTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toTopOf="@+id/nameUpdateInsertView"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Insert library´s address:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addressUpdateTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toBottomOf="@+id/nameUpdateTextView"
            app:layout_constraintBottom_toTopOf="@+id/addressUpdateInsertView" app:layout_constraintVertical_bias="0.814"/>
    <TextView
            android:text="Insert library´s details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createLibraryUpdateTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.512"/>
    <Button
            android:text="Update Library"
            android:layout_width="wrap_content"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content" android:id="@+id/updateLibraryButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>