<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#6E260E"
        android:layout_height="match_parent"
        tools:context=".CreateLibraryActivity">
    <TextView
            android:text="Insert library´s open time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openTimeTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toTopOf="@+id/openTimeInsertView"/>
    <TextView
            android:text="Insert library´s open days:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openDaysTextView"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintTop_toBottomOf="@+id/openTextView"
            android:layout_marginTop="68dp" app:layout_constraintBottom_toTopOf="@+id/openDaysInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/nameInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="88dp" app:layout_constraintBottom_toTopOf="@+id/addressInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/addressInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="176dp" app:layout_constraintBottom_toTopOf="@+id/openInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/openInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="264dp" app:layout_constraintBottom_toTopOf="@+id/openDaysInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Insert library´s close time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/closeTimeTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toTopOf="@+id/closeTimeInsertView"/>
    <EditText
            android:id="@+id/openDaysInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="352dp" app:layout_constraintBottom_toTopOf="@+id/openStatementInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/openStatementInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="436dp" app:layout_constraintBottom_toTopOf="@+id/openTimeInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:id="@+id/openTimeInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="520dp" app:layout_constraintBottom_toTopOf="@+id/closeTimeInsertView"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Insert library´s open statement:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openStatementTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/openStatementInsertView" android:layout_marginBottom="8dp"/>
    <EditText
            android:id="@+id/closeTimeInsertView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:queryHint="Search Books"
            tools:layout_editor_absoluteX="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="604dp"/>
    <TextView
            android:text="Insert library´s open:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/openTextView"
            tools:layout_editor_absoluteX="16dp" app:layout_constraintBottom_toTopOf="@+id/openInsertView"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Insert library´s name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintBottom_toTopOf="@+id/nameInsertView"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Insert library´s address:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addressTextView"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            app:layout_constraintBottom_toTopOf="@+id/addressInsertView" app:layout_constraintVertical_bias="0.814"/>
    <TextView
            android:text="Insert library´s details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/createLibraryTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.512"/>
    <Button
            android:text="Add Library"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/addLibraryButton"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>



